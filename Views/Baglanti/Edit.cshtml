@model BLBM_ENV.Models.Baglanti

@{
    ViewData["Title"] = "Port Detayını Düzenle";
}

<h4>@ViewData["Title"]</h4>
<h5>Port: @Model.Source_Port (@Model.SourceDevice?.DeviceName)</h5>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Bu gizli alanlar, POST işleminde verinin kaybolmaması için kritik öneme sahiptir -->
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="SourceDeviceID" />
            <input type="hidden" asp-for="TargetDeviceID" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Source_Port" class="control-label">Kaynak Port</label>
                    <input asp-for="Source_Port" class="form-control" />
                    <span asp-validation-for="Source_Port" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Target_Port" class="control-label">Hedef Port</label>
                    <input asp-for="Target_Port" class="form-control" />
                    <span asp-validation-for="Target_Port" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ConnectionType" class="control-label">Bağlantı Türü</label>
                    <input asp-for="ConnectionType" class="form-control" />
                    <span asp-validation-for="ConnectionType" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Source_LinkStatus" class="control-label">Link Durumu</label>
                    <input asp-for="Source_LinkStatus" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Source_LinkSpeed" class="control-label">Link Hızı</label>
                    <input asp-for="Source_LinkSpeed" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Source_NicID" class="control-label">NIC ID</label>
                    <input asp-for="Source_NicID" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Source_BakirMAC" class="control-label">Bakır MAC</label>
                    <input asp-for="Source_BakirMAC" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Source_FiberMAC" class="control-label">Fiber MAC</label>
                    <input asp-for="Source_FiberMAC" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Source_WWPN" class="control-label">WWPN</label>
                    <input asp-for="Source_WWPN" class="form-control" />
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-controller="Envanter" asp-action="Details" asp-route-id="@Model.SourceDeviceID" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>