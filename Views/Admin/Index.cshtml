@model IEnumerable<BLBM_ENV.Models.UserViewModel>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="page-header">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>E-posta</th>
                        <th>Roller</th>
                        <th class="text-center" style="width: 300px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    foreach (var role in user.Roles)
                                    {
                                        var badgeClass = role == "Admin" ? "bg-danger" : "bg-primary";
                                        <span class="badge @badgeClass me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Rol Yok</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-outline-primary" title="Yetkileri Düzenle">
                                        <i class="fas fa-user-shield"></i>
                                    </a>

                                    <!-- YENİ EKLENDİ: Şifre Sıfırlama Butonu -->
                                    <a asp-action="ResetPassword" asp-route-userId="@user.Id" class="btn btn-sm btn-outline-warning" title="Şifre Sıfırla">
                                        <i class="fas fa-key"></i>
                                    </a>

                                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post" class="d-inline" onsubmit="return confirm('@user.UserName kullanıcısını silmek istediğinize emin misiniz? Bu işlem geri alınamaz!');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1" title="Kullanıcıyı Sil">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>