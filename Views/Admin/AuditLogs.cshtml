@model IEnumerable<BLBM_ENV.Models.AuditLog>

@{
    ViewData["Title"] = "İşlem Geçmişi";
}

<div class="page-header">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table id="auditTable" class="table table-striped table-bordered table-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Tarih</th>
                        <th>Kullanıcı</th>
                        <th>Mail</th>
                        <th>İşlem</th>
                        <th>Modül</th>
                        <th>Açıklama</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td class="fw-bold">@log.UserName</td>
                            <td><small>@log.UserEmail</small></td>
                            <td>
                                @{
                                    var badgeClass = log.Action switch
                                    {
                                        "Ekleme" => "bg-success",
                                        "Silme" => "bg-danger",
                                        "Güncelleme" => "bg-warning text-dark",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@log.Action</span>
                            </td>
                            <td>@log.Module</td>
                            <td>@log.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#auditTable').DataTable({
                "order": [[ 0, "desc" ]],
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json' }
            });
        });
    </script>
}