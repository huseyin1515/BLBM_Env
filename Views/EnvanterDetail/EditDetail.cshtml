@model BLBM_ENV.Models.EnvanterDetail

@{
    ViewData["Title"] = "Port Detayını Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var allDevices = ViewBag.AllDevicesForSelectList as List<BLBM_ENV.Models.Envanter> ?? new List<BLBM_ENV.Models.Envanter>();
}

<h4>@ViewData["Title"]: @Model.PortID (@Model.DeviceName)</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditDetail">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="EnvanterID" />
            <input type="hidden" asp-for="DeviceName" />
            <input type="hidden" asp-for="DeviceModel" />
            <input type="hidden" asp-for="DeviceServiceTag" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PortID" class="control-label fw-bold"></label>
                    <input asp-for="PortID" class="form-control" />
                    <span asp-validation-for="PortID" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Turu" class="control-label fw-bold"></label>
                    <select asp-for="Turu" class="form-select">
                        <option value="Bakır">Bakır</option>
                        <option value="Fiber">Fiber</option>
                        <option value="Virtual">Virtual</option>
                    </select>
                    <span asp-validation-for="Turu" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="BakirMAC" class="control-label"></label>
                    <input asp-for="BakirMAC" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="FiberMAC" class="control-label"></label>
                    <input asp-for="FiberMAC" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="WWPN" class="control-label"></label>
                    <input asp-for="WWPN" class="form-control" />
                </div>
            </div>

            <hr />
            <h5 class="text-muted">Bağlantı Bilgileri</h5>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SwName" class="control-label">Hedef Cihaz</label>
                    <select asp-for="SwName" class="form-select">
                        <option value="">-- Bağlantı Yok --</option>
                        @foreach (var item in allDevices)
                        {
                            <option value="@item.DeviceName">@item.DeviceName (@item.Model)</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SwPort" class="control-label">Hedef Port</label>
                    <input asp-for="SwPort" class="form-control" />
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-controller="Envanter" asp-action="Details" asp-route-id="@Model.EnvanterID" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>