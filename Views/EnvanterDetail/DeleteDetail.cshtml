@model BLBM_ENV.Models.EnvanterDetail

@{
    ViewData["Title"] = "Port Detayı Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Bu Port Detayını Silmek İstediğinizden Emin misiniz?</h4>
    <p>Bu işlem geri alınamaz ve sadece bu porta ait detayları (MAC, WWPN vb.) siler. Eğer bir bağlantı varsa, o ayrıca silinmelidir.</p>
</div>

<div>
    <h4>Silinecek Port Detayları</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Cihaz</dt>
        <dd class="col-sm-9">@Model.Envanter?.DeviceName</dd>
        <dt class="col-sm-3">Port ID</dt>
        <dd class="col-sm-9">@Model.PortID</dd>
        <dt class="col-sm-3">Türü</dt>
        <dd class="col-sm-9">@Model.Turu</dd>
        <dt class="col-sm-3">MAC / WWPN</dt>
        <dd class="col-sm-9">
            <code>@Model.BakirMAC</code>
            <code>@Model.FiberMAC</code>
            <code>@Model.WWPN</code>
        </dd>
    </dl>

    <form asp-action="DeleteDetail">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Evet, Sil" class="btn btn-danger" />
        <a asp-controller="Envanter" asp-action="Details" asp-route-id="@Model.EnvanterID" class="btn btn-secondary">İptal et ve Geri Dön</a>
    </form>
</div>