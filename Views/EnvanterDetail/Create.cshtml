@model BLBM_ENV.Models.Envanter

@{
    ViewData["Title"] = "Yeni Envanter Cihazı Ekle";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h4>Temel Bilgiler</h4>
            <div class="row p-3 mb-3 border rounded">
                <div class="col-md-6 mb-3">
                    <label asp-for="DeviceName" class="control-label fw-bold"></label>
                    <input asp-for="DeviceName" class="form-control" />
                    <span asp-validation-for="DeviceName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Tur" class="control-label fw-bold"></label>
                    <input asp-for="Tur" class="form-control" placeholder="Server, Switch, vb." />
                    <span asp-validation-for="Tur" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ServiceTagSerialNumber" class="control-label"></label>
                    <input asp-for="ServiceTagSerialNumber" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                </div>
            </div>

            <h4>Ağ ve Sanallaştırma Bilgileri</h4>
            <div class="row p-3 mb-3 border rounded">
                <div class="col-md-6 mb-3">
                    <label asp-for="IpAddress" class="control-label"></label>
                    <input asp-for="IpAddress" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="IloIdracIp" class="control-label"></label>
                    <input asp-for="IloIdracIp" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="VcenterAddress" class="control-label"></label>
                    <input asp-for="VcenterAddress" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ClusterName" class="control-label"></label>
                    <input asp-for="ClusterName" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="OperatingSystem" class="control-label"></label>
                    <input asp-for="OperatingSystem" class="form-control" />
                </div>
            </div>

            <h4>Fiziksel Konum Bilgileri</h4>
            <div class="row p-3 mb-3 border rounded">
                <div class="col-md-12 mb-3">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Kabin" class="control-label"></label>
                    <input asp-for="Kabin" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="RearFront" class="control-label"></label>
                    <input asp-for="RearFront" class="form-control" placeholder="Rear / Front" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="KabinU" class="control-label"></label>
                    <input asp-for="KabinU" class="form-control" />
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}