@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 60vh;">
    <div class="text-center">
        <i class="fas fa-exclamation-triangle fa-5x text-danger mb-4"></i>
        <h1 class="display-4 fw-bold text-danger">Beklenmeyen Bir Hata Oluştu</h1>
        <p class="lead mb-4">İşleminiz sırasında teknik bir sorun meydana geldi.</p>

        <div class="alert alert-secondary d-inline-block text-start">
            <p class="mb-0"><strong>Hata durumu sistem yöneticilerine loglandı.</strong></p>
            @if (Model.ShowRequestId)
            {
                <p class="mb-0"><small>Takip ID (Request ID): <code>@Model.RequestId</code></small></p>
            }
        </div>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>