<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Envanter Yönetimi</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <!-- GÜNCELLENDİ: Navbar'a 'fixed-top' sınıfı eklendi -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Envanter" asp-action="Index">
                    <i class="fas fa-database me-2"></i>
                    Envanter Projesi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Envanter" asp-action="Index"><i class="fas fa-fw fa-list me-2"></i>Envanter Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Baglanti" asp-action="Index"><i class="fas fa-fw fa-network-wired me-2"></i>Bağlantı Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Vip" asp-action="Index"><i class="fas fa-fw fa-project-diagram me-2"></i>VIP Listesi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Kabin" asp-action="Index"><i class="fas fa-fw fa-sitemap me-2"></i>Kabin Görünümü</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- GÜNCELLENDİ: Ana içerik alanı artık bir container içinde -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container-fluid">
            &copy; @DateTime.Now.Year - Envanter Projesi
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>